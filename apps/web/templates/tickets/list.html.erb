<h3><%= t 'open_tickets' %></h3>

<% if tickets.empty? %>
<div class="alert alert-info">
  <%= t 'no_tickets' %>
</div>
<% else %>
<ul class="ticket-list">
  <% tickets.each do |ticket| %>
  <li class="ticket">
    <h5 class="ticket-title">
      <a href="<%= link_to :tickets, id: ticket.id %>"><%= ticket.title %></a>
    </h5>

    <div class="ticket-info">
      <span class="ticket-type type-<%= ticket.type %>"><%= t ticket.type %></span>
      <span class="ticket-priority priority-<%= ticket.priority %>"><%= t ticket.priority %></span>
      <span class="ticket-timestamp"><%= ticket.created_at %></span>
    </div>
  </li>
  <% end %>
</ul>
<% end %>

<ul class="ticket-pagination">
  <% if page > 1 %>
  <li class="prev-page">
    <a href="/tickets/list/<%= page - 1 %>" class="btn-flat waves-effect waves-teal"><i class="mdi-navigation-chevron-left"></i><span><%= t 'prev_page' %></span></a>
  </li>
  <% end %>
  <% if page < num_pages %>
  <li class="next-page">
    <a href="/tickets/list/<%= page + 1 %>" class="btn-flat waves-effect waves-teal"><span><%= t 'next_page' %></span><i class="mdi-navigation-chevron-right"></i></a>
  </li>
  <% end %>
</ul>
